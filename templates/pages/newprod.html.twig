{% extends 'base.html.twig' %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body  %}
    {% for message in app.flashes('success') %}
            <div class="col-sm-10" style="margin-left: 5%;">
                <div class="alert  alert-success alert-dismissible fade show" role="alert">
                    <span class="badge badge-pill badge-success">Success</span>  &nbsp;{{ message }} .
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>


    {% endfor %}
    <br>
    {{ form_start (form) }}

    <div class="col">
        <div class="container mt-100 mt-sm-5">

            <div class="col-md-4">{{ form_row(form.nom) }}</div>
            <div class="col-md-4">{{ form_row(form.qnt_init) }}</div>
            <div class="col-md-4">{{ form_row(form.prix) }}</div>
            <div class="col-md-4">{{ form_row(form.imageFile) }}</div>
            <div class="col-md-4"> <br> <button type="reset" class="btn btn-outline-secondary btn-sm" style="width: 303px;padding: 7px;"><i class="fa ti-reload" ></i>&nbsp;&nbsp;Annuler</button> </div>
            <div class="col-md-4"> <br> <button type="submit" class="btn btn-secondary" style="width: 148px"><i class="fa fa-magic" ></i>&nbsp; Ajouter</button>
                <a href="{{ path('pro') }}" ><button type="button" class="btn btn-dark" style="width: 148px"><i class="fa fa-hand-o-left" ></i>&nbsp;Retour</button></a></div>

            <div class="col-md-4 invisible">{{ form_row(form.qte) }}</div>




        </div>
    </div>

    {{ form_end (form) }}

{% endblock %}